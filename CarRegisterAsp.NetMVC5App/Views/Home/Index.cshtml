@{
    ViewBag.Title = "Home Page";
}

@section css{
    <link href="~/Content/ng.css" rel="stylesheet" />
    <link href="~/Content/index.page.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/ScriptsNg/IndexPadeApp.js"></script>
}

<div ng-app="indexPageApp">
    <h2>Car register page</h2>
    <div id="carsContent" ng-controller="IndexController">
        <span ng-show="isViewLoading" class="viewLoading">
            <img src="~/Content/images/ng-loader.gif" /> loading...
        </span>
        <div ng-class="result">{{message}}</div>
        <hr />
        <div>
            <table ng-show="true" class="table table-bordered">
                <tr>
                    <td style="width: 7vw;">
                        <span>First name:</span>
                        <input class="" style="width: 100%;" type="text" ng-model="firstNameInput" ng-change="" ng-required="true" name="fnname" placeholder="" />
                    </td>
                    <td style="width: 7vw;">
                        <span>Last name:</span>
                        <input class="" style="width: 100%;" type="text" ng-model="lastNameInput" ng-change="" ng-required="true" name="lnname" placeholder="" />
                    </td>
                    <td style="width: 7vw;">
                        <span>Patronimic:</span>
                        <input class="" style="width: 100%;" type="text" ng-model="patronymicInput" ng-change="" ng-required="true" name="pname" placeholder="" />
                    </td>
                    <td style="width: 7vw;">
                        <span>Phone number:</span>
                        <input class="" style="width: 100%;" type="text" ng-model="phoneNumberInput" ng-change="" ng-required="true" name="pnname" placeholder="" />
                    </td>
                    <td style="width: 7vw;">
                        <span>Car number:</span>
                        <input class="" style="width: 100%;" type="text" ng-model="carNumberInput" ng-change="" ng-required="true" name="cnname" placeholder="" />
                    </td>
                    <td>
                        <span>Car brand:</span>
                        <select ng-model="carBrandSelect" ng-change="OnCarBrandSelectChange()" id="brandsSelectList" class="brand-select-list" style="width: 100%;">
                            <option ng-repeat="brand in carBrandsList" value="{{brand.Id}}">{{brand.Name}}</option>
                        </select>
                    </td>
                    <td>
                        <span>Car model:</span>
                        <select ng-model="carModelSelect" ng-change="" id="modelsSelectList" class="model-select-list" style="width: 100%;">
                            <option ng-repeat="brand in carModelsList" value="{{brand.Id}}">{{brand.Name}}</option>
                        </select>
                    </td>
                    <td style="text-align: center; padding-top: 15pt; width: 7vw;">
                        <a ng-click="RegisterCar()">
                            <img title="Register car" src="~/Content/images/add.png" />
                        </a>
                    </td>
                </tr>
            </table>
            <hr />
            <table ng-show="true" class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 7vw;">
                            <span>First name</span>
                        </th>
                        <th style="width: 7vw;">
                            <span>Last name</span>
                        </th>
                        <th style="width: 7vw;">
                            <span>Patronimic</span>
                        </th>
                        <th style="width: 7vw;">
                            <span>Phone number</span>
                        </th>
                        <th style="width: 7vw;">
                            <span>Car number</span>
                        </th>
                        <th>
                            <span>Car brand</span>
                        </th>
                        <th>
                            <span>Car model</span>
                        </th>
                        <th style="width: 7vw;">
                            <span>Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="car in carsList">
                        <td>
                            <span>{{car.FirstName}}</span>
                        </td>
                        <td>
                            <span>{{car.LastName}}</span>
                        </td>
                        <td>
                            <span>{{car.Patronymic}}</span>
                        </td>
                        <td>
                            <span>{{car.PhoneNamber}}</span>
                        </td>
                        <td>
                            <span>{{car.CarNumber}}</span>
                        </td>
                        <td>
                            <span>{{car.CarBrand}}</span>
                        </td>
                        <td>
                            <span>{{car.CarModel}}</span>
                        </td>
                        <td style="text-align: center; width: 7vw;">
                            <a ng-click="">
                                <img title="Edit" src="~/Content/images/edit.png" />
                            </a>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <a ng-click="">
                                <img title="Delete" src="~/Content/images/erase.png" />
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>





